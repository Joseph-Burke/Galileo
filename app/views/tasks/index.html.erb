<div class="tasks-index">
  <h1 class="title">All tasks</h1>

  <section class="task-list">
    <% @tasks.each do |task| %>
    <div class='task'>
      <h5 class="task-title">
        <%= task.title %>
      </h5>
      <p class="task-description">
        <%= task.description.gsub(' ', '') == '' ? 'No description' : task.description %>
      </p>
      <div class="links">
        <%= link_to "View Task", task %>
        <%= link_to 'Edit', edit_task_path(task) %>
        <%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
    </div>
    <% end %>
  </section>
  <br>
  <%= link_to 'New Task', new_task_path %>

</div>